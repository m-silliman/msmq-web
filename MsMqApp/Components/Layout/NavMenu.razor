@* Navigation menu component *@
@inject IJSRuntime JSRuntime

<nav class="nav-menu">
    <div class="nav-item">
        <NavLink class="nav-link" href="" Match="NavLinkMatch.All"
                 title="Home" @onclick="HandleNavigation">
            <i class="bi bi-house-door-fill" aria-hidden="true"></i>
            <span class="nav-text">Home</span>
        </NavLink>
    </div>

    <div class="nav-item">
        <NavLink class="nav-link" href="counter"
                 title="Counter" @onclick="HandleNavigation">
            <i class="bi bi-envelope-fill" aria-hidden="true"></i>
            <span class="nav-text">Counter</span>
        </NavLink>
    </div>

    <div class="nav-item">
        <NavLink class="nav-link" href="component-demo"
                 title="Components" @onclick="HandleNavigation">
            <i class="bi bi-palette-fill" aria-hidden="true"></i>
            <span class="nav-text">Components</span>
        </NavLink>
    </div>

    <!-- Divider -->
    <div class="nav-divider"></div>

    <div class="nav-item">
        <NavLink class="nav-link" href="settings"
                 title="Settings" @onclick="HandleNavigation">
            <i class="bi bi-gear-fill" aria-hidden="true"></i>
            <span class="nav-text">Settings</span>
        </NavLink>
    </div>
</nav>

@code {
    private void HandleNavigation()
    {
        // Close drawer on navigation (for mobile)
        _ = Task.Run(async () =>
        {
            await Task.Delay(100); // Small delay to allow navigation to complete
            await InvokeAsync(async () =>
            {
                await JSRuntime.InvokeVoidAsync("toggleDrawer", false);
            });
        });
    }
}
